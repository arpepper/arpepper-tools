#!/xhbin/tcsh -f

if ($?STY) exit 0
set screen = `/bin/showpath findfirst=screen current`
if ( "m${screen}t" == "mt" ) exit 0
if ( $?SSH_CONNECTION ) then
	switch ( "$SSH_CONNECTION" )
	case 129.97*:
		breaksw
	default:
		if ( "x${TERM}" == "xxterm" ) then
			# kludge to make scrolling work nicely
			setenv TERM vt100
		endif
		if ( "x${TERM}" == "xscreen" ) then
			setenv TERM vt100
		endif
		exec $screen
	endsw
endif
exit 0
